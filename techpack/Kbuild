TECHPACK?=y

techpack-dirs := $(shell find -L $(srctree)/techpack -maxdepth 1 -mindepth 1 -type d -not -name ".*")
techpack-dirs := $(filter-out $(srctree)/techpack/data,$(techpack-dirs))
obj-${TECHPACK} += stub/ $(addsuffix /,$(subst $(srctree)/techpack/,,$(techpack-dirs)))

techpack-header-dirs := $(shell find -L $(srctree)/techpack -maxdepth 1 -mindepth 1 -type d -not -name ".*")
techpack-header-dirs := $(filter-out $(srctree)/techpack/data,$(techpack-header-dirs))
header-${TECHPACK} += $(addsuffix /include/uapi/,$(subst $(srctree)/techpack/,,$(techpack-header-dirs)))
